<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".TrangChuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/body3"
        android:textAlignment="center">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:text="QUẢN LÝ THƯ VIỆN FBU"
                android:textAlignment="center"
                android:textColor="@color/text"
                android:textSize="27dp" />


    <Button
        android:id="@+id/btncapthett"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="130dp"
        android:background="@drawable/background_input"
        android:hint="Cấp thẻ bạn đọc"
        android:textAlignment="center"
        android:textColorHint="#000000"
        android:textSize="23dp"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/btnthuhoithett"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/body2"
        android:background="@drawable/background_input"
        android:hint="Thu hồi thẻ bạn đọc"
        android:textAlignment="center"
        android:textColorHint="#000000"
        android:textSize="23dp"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/btnthemthongtinbdtt"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/body2"
        android:background="@drawable/background_input"
        android:hint="Thêm thông tin bạn đọc"
        android:textAlignment="center"
        android:textColorHint="#000000"
        android:textSize="23dp"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/btncapnhatthongtinbdtt"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/body2"
        android:background="@drawable/background_input"
        android:hint="Cập nhật thông tin bạn đọc"
        android:textAlignment="center"
        android:textColorHint="#000000"
        android:textSize="23dp"
        app:backgroundTint="@null" />

    </LinearLayout>
</LinearLayout>

