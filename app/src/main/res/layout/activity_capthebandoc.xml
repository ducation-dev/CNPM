<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".CapTheBanDocActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/body3"
        android:textAlignment="center">

        <ImageButton
            android:id="@+id/btnback"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/chevron_left" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_bold"
            android:text="CẤP THẺ BẠN ĐỌC"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="20dp" />
    </LinearLayout>

    </LinearLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtidmathect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_input"
            android:ems="10"
            android:hint="Mã thẻ"
            android:inputType="number"
            android:maxLength="10"
            android:textColorHint="@color/text"
            android:textSize="@dimen/body2" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/body5"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edthotenct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_input"
                android:ems="10"
                android:hint="Họ và tên"
                android:inputType="text"
                android:maxLength="50"
                android:textColorHint="@color/text"
                android:textSize="@dimen/body2" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/body1"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtlopct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_input"
                android:ems="10"
                android:hint="Lớp hành chính"
                android:inputType="text"
                android:maxLength="12"
                android:textColorHint="@color/text"
                android:textSize="@dimen/body2" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/body1"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtsdtct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_input"
                android:ems="10"
                android:hint="Số điện thoại"
                android:inputType="number"
                android:maxLength="11"
                android:textColorHint="@color/text"
                android:textSize="@dimen/body2" />
        </com.google.android.material.textfield.TextInputLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edtngaydangkyct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/body1"
            android:background="@drawable/background_input"
            android:drawableEnd="@drawable/date_time"
            android:text="Ngày đăng ký"
            android:textSize="@dimen/body2" />


    </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/body1"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtnguoidangkyct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_input"
                android:ems="10"
                android:hint="Người đăng ký"
                android:inputType="text"
                android:maxLength="50"
                android:textColorHint="@color/text"
                android:textSize="@dimen/body2" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/body1"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edttrangthaict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_input"
                android:ems="10"
                android:hint="Trạng thái"
                android:inputType="text"
                android:maxLength="20"
                android:textColorHint="@color/text"
                android:textSize="@dimen/body2" />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/btncapthe"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/body2"
            android:background="@drawable/custom_button"
            android:hint="Nhập"
            android:textAlignment="center"
            android:textColorHint="#FFFFFF"
            android:textSize="25dp"
            app:backgroundTint="@null" />

    </LinearLayout>
